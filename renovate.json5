{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',

  // Self Hosted Bot
  username: 'renovate-github-actions[bot]',
  gitAuthor: 'renovate-github-actions[bot] <135154770+renovate-github-actions[bot]@users.noreply.github.com>',
  onboarding: false,
  requireConfig: 'optional',
  platform: 'github',
  repositories: [
    'pdonorio/renovate-test',
  ],

//   ignorePaths: [
//     'infra/helm/app/**',
//   ],
  customManagers: [

    {
      customType: 'regex',
      datasourceTemplate: "docker",
      versioningTemplate: "docker",
      fileMatch: [
        '(^|/)values\\.y[a]?ml$',
      ],
      matchStrings: [
        '# renovate: container image\\s+repository:\\s?\\"?(?<repo>[^\\s\"]*)\\"?\\s+name:\\s+\\"?(?<name>[^\\s\"]*)\\"?\\s+tag:\\s+\\"?(?<currentValue>[^\\s\"]*)\\"?',
      ],
      "depNameTemplate": "https://{{repo}}/{{name}}",
    },

  ],
}
